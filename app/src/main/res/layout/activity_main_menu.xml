<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="yh4339.battle.MainMenu"
    android:background="#000000">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageAnimation"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play Game"
        android:id="@+id/playGameButton"
        android:layout_alignLeft="@+id/scoreButton"
        android:layout_alignStart="@+id/scoreButton"
        android:layout_above="@+id/scoreButton"
        android:layout_alignRight="@+id/scoreButton"
        android:layout_alignEnd="@+id/scoreButton"
        android:onClick="play"
        android:background="#00000000"
        android:textColor="#FFFFFF" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="High Scores"
        android:id="@+id/scoreButton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="scores"
        android:background="#00000000"
        android:textColor="#FFFFFF"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Options"
        android:id="@+id/optionButton"
        android:layout_below="@+id/scoreButton"
        android:layout_alignLeft="@+id/scoreButton"
        android:layout_alignStart="@+id/scoreButton"
        android:layout_alignRight="@+id/scoreButton"
        android:layout_alignEnd="@+id/scoreButton"
        android:onClick="options"
        android:background="#00000000"
        android:textColor="#FFFFFF"/>

</RelativeLayout>
